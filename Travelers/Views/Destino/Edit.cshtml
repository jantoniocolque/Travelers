@model Travelers.Clases.DestinoCLS

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Destino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model != null && Model.mensajeError != "")
            {
                <p class="text-danger">@Model.mensajeError</p>
            }
            <input type="hidden" asp-for="idDestino" />
            <div class="form-group">
                <label asp-for="nombrePais" class="control-label"></label>
                <input asp-for="nombrePais" class="form-control" />
                <span asp-validation-for="nombrePais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombreProvincia" class="control-label"></label>
                <input asp-for="nombreProvincia" class="form-control" />
                <span asp-validation-for="nombreProvincia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label"></label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
